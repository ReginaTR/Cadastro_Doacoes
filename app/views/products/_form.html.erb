<%= form_with(model: product) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :quantity, class: "form-label" %>
    <%= form.number_field :quantity, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :status, class: "form-label" %>
    <%= form.text_field :status, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :institution_id, "Institution", class: "form-label" %>
    <%= form.collection_select :institution_id, Institution.all, :id, :name, { prompt: "Select an Institution" }, { class: "form-input" } %>
  </div>

  <div class="flex items-center justify-between flex-wrap">
    <div class="sm:flex-1 sm:mb-0 mb-6">
      <%= form.submit class: "btn btn-primary" %>
    </div>

    <% if form.object.new_record? %>
      <%= link_to "Cancel", products_path, class: "btn btn-light" %>
    <% else %>
      <%= link_to "Cancel", product_path(@product), class: "btn btn-light" %>
    <% end %>
  </div>
<% end %>
