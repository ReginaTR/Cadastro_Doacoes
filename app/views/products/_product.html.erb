<article id="<%= dom_id product %>" class="py-6 prose dark:prose-invert">
    <p class="mb-0 font-semibold">
      Name
    </p>
    <p class="my-0">
      <%= product.name %>
    </p>
    <p class="mb-0 font-semibold">
      Description
    </p>
    <p class="my-0">
      <%= product.description %>
    </p>
    <p class="mb-0 font-semibold">
      Quantity
    </p>
    <p class="my-0">
      <%= product.quantity %>
    </p>
    <p class="mb-0 font-semibold">
      Status
    </p>
    <p class="my-0">
      <%= product.status %>
    </p>
    <p class="mb-0 font-semibold">
      Institution
    </p>
    <p class="my-0">
      <%= product.institution.name %>
    </p>

   <p>
    <%= link_to "View Product", product, class: "underline" %>
  </p>
</article>
